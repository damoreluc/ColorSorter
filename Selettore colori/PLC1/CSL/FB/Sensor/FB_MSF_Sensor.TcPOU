<?xml version="1.0" encoding="utf-8"?>
<TcPlcObject Version="1.1.0.1" ProductVersion="3.1.4024.12">
  <POU Name="FB_MSF_Sensor" Id="{36b94ebf-d3be-44ba-ae1f-96261f197527}" SpecialFunc="None">
    <Declaration><![CDATA[FUNCTION_BLOCK FB_MSF_Sensor
VAR_INPUT
	stIn				:	ST_CSL_In;
	bEnable				:	BOOL;
	
END_VAR

VAR_OUTPUT
	eStep				:	E_Step;
	eErrStep			:	E_Step;
	nErrId				:	DINT;
	
	bFbEnd				:	BOOL;
	
	stOut				:	ST_CSL_RawOut;
	
	nSlot				:	INT;
	
END_VAR

VAR_IN_OUT
	stParams			:	ST_CSL_Params;
	
END_VAR

VAR
	bInitialized		:	BOOL;
	eNewStep			:	E_Step;
	bEntryAct			:	BOOL;
	fbTonStart			:	TON;
	
	fbMeasure			:	FB_Measuring;
	fbSlot				:	FB_Processing;
	
	
	rPieceValue			:	REAL;
	bEndMeasure			:	BOOL;
	
END_VAR
]]></Declaration>
    <Implementation>
      <ST><![CDATA[(*Initialization of the FB_Sensor*)
IF NOT bInitialized THEN
	eNewStep := E_Step.NoStep;
	eStep := E_Step.Start;
	bEntryAct := FALSE;
	bFbEnd := FALSE;
	bInitialized := TRUE;
ELSE
	
	(*Preamble*)
	
	(*Forcing the Error State*)
	IF NOT bEnable THEN
		eNewStep := E_Step.NeOrError;
	END_IF	
	
	(*State change management*)
	IF eNewStep <> E_Step.NoStep THEN
		eStep := eNewStep;
		eNewStep := E_Step.NoStep;
		bEntryact := FALSE;
	END_IF
	
	(*Filters*)
	fbTonStart(IN := NOT stIn.bPieceSensorInput, PT := T#2S);
		
	(*Case*)
	CASE eStep OF
		(*Start Step*)
		E_Step.Start :
			(*Body*)
			stOut.bMotor := FALSE;
		
			(*Transition - to Measuring*)
			IF fbTonStart.Q AND bEnable THEN
				eNewStep := E_Step.Measuring;
			END_IF
			
			(*Exit Act*)
			IF eNewStep <> E_Step.NoStep THEN
				IF eNewStep = E_Step.NeOrError THEN
					eErrStep := eStep;
					//nErrId	:= 16#9999_9999;
				END_IF
			END_IF
			
		(*Measuring Step*)
		E_Step.Measuring :
			(*Body*)
			stOut.bMotor := TRUE;
		
			fbMeasure(Vin := stIn.nColorSensor, Vout := rPieceValue);
			
			(*Transition - to Processing*)
			IF NOT stIn.bPieceSensorOutput AND bEnable THEN
				fbSlot(SensorInput := rPieceValue, stParams := stParams);
				nSlot := fbSlot.slot;
				bInitialized := FALSE;
				bFbEnd := TRUE;
			END_IF
			
			(*Exit Act*)
			IF eNewStep <> E_Step.NoStep THEN
				IF eNewStep = E_Step.NeOrError THEN
					eErrStep := eStep;
					//nErrId	:= 16#9999_9999;
				END_IF
			END_IF
		
		E_Step.NeOrError :
			(*Body*)
			stOut.bMotor := FALSE;
		
			(*Transition - to Measuring*)
			
			
			(*Exit Act*)
			IF eNewStep <> E_Step.NoStep THEN
				IF eNewStep = E_Step.NeOrError THEN
					eErrStep := eStep;
					//nErrId	:= 16#9999_9999;
				END_IF
			END_IF
			
	END_CASE
END_IF]]></ST>
    </Implementation>
